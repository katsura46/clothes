<div class = "row">
  <%= render "public/users/current_user_info" %>
  <div class = "col-sm-12 col-md-8 offset-md-1 d-flex flex-wrap">
    <% posts.each do |post| %>
      <div class="row">
        <%= link_to post_path(post) do %>
          <div class="post-image-text card-effect text-center">
            <div class="post-image-box">
              <%= image_tag post.post_image, class: "post-image-index" %>
            </div>
            <div class = "post-daytime">
              投稿日時：<%= post.created_at.strftime('%Y/%m/%d %H:%M') %>
            </div>
            <div class = "favorite-count">
              いいね数：<i class="fas fa-smile-wink", style="color:#ff1493;"></i>
              <%= post.favorites.count %>
            </div>
            <div class="my-2">
              <strong>title:</strong><%= post.title %>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
<div class = "row my-5">
  <div class = "col offset-6">
    <%= paginate posts %>
  </div>
</div>

