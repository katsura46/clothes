<div class = "container">
<%= form_with model:@post, url: posts_path, method: :post, local:true do |f| %>
  <div class = "row form-group mt-4">
    <label>投稿タイトル</label>
    <%= f.text_field :title, autofocus: true, class: "form-control" %>
  </div>
  <div class = "row">
    <label>投稿写真</label>
    <%= f.file_field :post_image, class: "form-control" %>
  </div>
  <div class = "row mt-2">カテゴリ</div>
  <div class="row check_box">
    <%= f.collection_check_boxes(:tag_ids, @tags, :id, :name) do |tag| %>
      <div class='form-check'>
     　 <%= tag.label do %>
      　  <%= tag.check_box %>
      　  <%= tag.text %>
      　<% end %>
      </div>
    <% end %>
</div>
  <div class = "row form-group">
    <label>ブランド名</label>
    <%= f.text_field :brand, class: "form-control" %>
  </div>
  <div class = "row form-group">
    <label>値段</label>
    <%= f.text_field :price, class: "form-control" %>
  </div>
  <div class = "row form-group">
    <label>投稿者コメント</label>
    <%= f.text_area :comment, class: "form-control" %>
  </div>
  <div class = "row offset-5 mb-5">
    <%= button_tag(type: "submit", class: "btn btn-post shadow-sm ml-2") do %>
      <span>投稿！！</span>
    <% end %>
  </div>
<% end %>
</div>