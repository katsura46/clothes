<div class = "col-2 profile text-center ">
  <h2>User info</h2>
  <div class = "user-info">
    <div class = "user-image">
      <%= image_tag @user.get_profile_image(100,100), class: "profile-image-info text-center" %>
    </div>
    <div class = "user-name">
      <%= @user.name %>
    </div>
    <div class = "row justify-content-center mt-5">
      
    </div>
    <div class = "row justify-content-center mt-5">
      <%= link_to "フォローリスト", user_followings_path(@user), class: "btn btn-follow" %>
    </div>
    <div class = "row justify-content-center mt-3">
      <%= link_to "フォロワーリスト", user_followers_path(@user), class: "btn btn-follow" %>
    </div>
    <div class = "row justify-content-center mt-4">
      
    </div>
    <div class = "row justify-content-center mt-4">
     
    </div>
  </div>
</div>
