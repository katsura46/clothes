<div class = "col-sm-12 col-md-2 profile text-center ">
  <h2 class = "font-gray">My info</h2>
  <div class = "user-info">
    <div class = "user-image">
      <%= image_tag current_user.get_profile_image(100,100), class: "profile-image-info text-center" %>
    </div>
    <div class = "user-name">
      <%= current_user.name %>
    </div>
    <div class = "row justify-content-center mt-5">
      <%= link_to "新規投稿する", new_post_path, class: "btn btn-new-post" %>
    </div>
    <div class = "row justify-content-center mt-5">
      <%= link_to "フォローリスト", user_followings_path(current_user), class: "btn btn-follow" %>
    </div>
    <div class = "row justify-content-center mt-3">
      <%= link_to "フォロワーリスト", user_followers_path(current_user), class: "btn btn-follow" %>
    </div>
    <div class = "row justify-content-center mt-5">
      <%= link_to "お気に入りリスト", user_favorites_path(current_user), class: "btn btn-favorite" %>
    </div>
    <div class = "row justify-content-center mt-5">
     <%= link_to "プロフィール変更" , edit_user_path(current_user), class: "btn btn-profile-edit" %>
    </div>
  </div>
</div>
