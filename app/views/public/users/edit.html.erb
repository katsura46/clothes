<div class = "container">
  <div class = "row">
    <h2>プロフィール変更</h2>
  </div>
<%= form_with model:@user,url: user_path(current_user), method: :patch do |f| %>
  <div class = "row form-group">
    <label for="user_name">プロフィール画像変更</label>
    <%= f.file_field :profile_image ,class: "form-control" %>
  </div>
  <div class = "row form-group">
    <label>名前変更</label>
    <%= f.text_field :name ,class: "form-control" %>
  </div>
  <div class = "row form-group">
    <label>自己紹介文</label>
    <%= f.text_area :introduction ,class: "form-control" %>
  </div>
  <div class = "row form-group">
    <label>メールアドレス変更</label>
    <%= f.email_field :email ,class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.submit 'Update User', class: "btn btn-secondary" %>
  </div>
<% end %>
</div>

