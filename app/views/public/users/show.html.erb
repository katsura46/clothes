
  <div class = "row long-photo">
    <%= image_tag 'default-image.jpg', class:'long-photo' %>
  </div>
  <div class = "row">
    <%= render "current_user_info" %>
    <div class = "col offset-1 d-flex flex-wrap">
      <div class = "col-6">
        <%= image_tag @user.profile_image, class: "profile-image" %>
      </div>
      <div class = "col-6">
        <div class = "row">
          <div class = "col-8 user-name text-left">
            ユーザー名：<%= @user.name %>
          </div>
          <% if @user != current_user %>
            <% if current_user.following?(@user) %>
              <%= link_to "フォロー外す", user_relationships_path(@user.id), method: :delete %>
            <% else %>
              <%= link_to "フォローする", user_relationships_path(@user.id), method: :post %>
            <% end %>
          <% end %>
        </div>
        <div class = "row">
          <div class = "col-3">
            <label>性別：</label>
            <%= @user.sex_i18n %>
          </div>
        </div>
        <div class = "row my-3">
          <div class = "col-8">
            <label>自己紹介文</label><br/>
            <%= @user.introduction %>
          </div>
        </div>
        <div class = "row">
          <div class = "col-4">
            <%= link_to "フォローリスト", user_followings_path(@user) %><br/>
            フォロー数: <%= @user.followings.count %>
          </div>
          <div class = "col-4">
            <%= link_to "フォロワーリスト", user_followers_path(@user) %><br/>
            フォロワー数: <%= @user.followers.count %></td>
          </div>
        </div>
      </div>
    </div>
  </div>