<div class = "row d-flex flex-wrap">
 
    <%= render "public/users/current_user_info" %>
 
  <div class = "col-8 offset-1">
    <% if users.exists? %>
      <% users.each do |user| %>
        <div class = "row d-flex flex-wrap">
          <%= image_tag user.profile_image, class: "profile-image-info" %>
          <div class = "col-3">
            ユーザー名：<%= user.name %><br/>
            <% if user != current_user %>
              <% if current_user.following?(user) %>
                <%= link_to "フォロー外す", user_relationships_path(user.id), method: :delete %>
              <% else %>
                <%= link_to "フォローする", user_relationships_path(user.id), method: :post %>
              <% end %>
            <% end %>
          </div>
          <div class = "col-3">
            <%= link_to "フォローリスト", user_followings_path(user) %><br/>
            フォロー数: <%= user.followings.count %>
          </div>
          <div class = "col-3">
            <%= link_to "フォロワーリスト", user_followers_path(user) %><br/>
            フォロワー数: <%= user.followers.count %></td>
          </div>
        </div>
      <% end %>
    <% else %>
      <p>ユーザーはいません</p>
    <% end %>
   </div>
</div>
