<div class = "container-fluid">
  <div class = "row">
    <div class = "col offset-1 d-flex flex-wrap">
      <div class = "col-6">
        <%= image_tag @user.profile_image, class: "profile-image" %>
      </div>
      <div class = "col-6">
        <div class = "row">
          <div class = "col-8 user-name text-left">
            ユーザー名：<%= @user.name %>
          </div>
        </div>
        <div class = "row">
          <div class = "col-3">
            <label>性別：</label>
            <%= @user.sex_i18n %>
          </div>
        </div>
        <div class = "row my-3">
          <div class = "col-8">
            <label>自己紹介文</label><br/>
            <%= @user.introduction %>
          </div>
        </div>
        <div class = "row">
          <div class = "col-4">
            <%= link_to "フォローリスト", user_followings_path(@user) %><br/>
            フォロー数: <%= @user.followings.count %>
          </div>
          <div class = "col-4">
            <%= link_to "フォロワーリスト", user_followers_path(@user) %><br/>
            フォロワー数: <%= @user.followers.count %></td>
          </div>
          <div>
            <%= link_to "強制退会する", user_unsubscribe_path(@user) %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>